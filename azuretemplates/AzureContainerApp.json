{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
      "_generator": {
        "name": "bicep",
        "version": "0.34.44.8038",
        "templateHash": "8780736891829704644"
      }
    },
    "parameters": {
      "location": {
        "type": "string",
        "metadata": {
          "description": "The Azure region where the resources will be deployed."
        }
      },
      "containerAppName": {
        "type": "string",
        "metadata": {
          "description": "The name of the Azure Container App."
        }
      },
      "username": {
        "type": "string",
        "metadata": {
          "description": "The username for Admin Center."
        }
      },
      "password": {
        "type": "securestring",
        "metadata": {
          "description": "The password for Admin Center."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.App/managedEnvironments",
        "apiVersion": "2024-10-02-preview",
        "name": "[format('env-{0}', parameters('containerAppName'))]",
        "location": "[parameters('location')]",
        "identity": {
          "type": "SystemAssigned"
        },
        "properties": {
          "appLogsConfiguration": {
            "destination": "azure-monitor"
          },
          "zoneRedundant": false,
          "kedaConfiguration": {},
          "daprConfiguration": {},
          "customDomainConfiguration": {},
          "workloadProfiles": [
            {
              "workloadProfileType": "Consumption",
              "name": "Consumption",
              "enableFips": false
            }
          ],
          "peerAuthentication": {
            "mtls": {
              "enabled": false
            }
          },
          "peerTrafficConfiguration": {
            "encryption": {
              "enabled": false
            }
          },
          "publicNetworkAccess": "Enabled"
        }
      },
      {
        "type": "Microsoft.App/containerApps",
        "apiVersion": "2024-10-02-preview",
        "name": "[parameters('containerAppName')]",
        "location": "[parameters('location')]",
        "kind": "workflowapp",
        "identity": {
          "type": "SystemAssigned"
        },
        "properties": {
          "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', format('env-{0}', parameters('containerAppName')))]",
          "workloadProfileName": "Consumption",
          "configuration": {
            "secrets": [
              {
                "name": "password",
                "value": "[parameters('password')]"
              }
            ],
            "activeRevisionsMode": "Single",
            "ingress": {
              "external": true,
              "targetPort": 80,
              "exposedPort": 0,
              "transport": "Auto",
              "traffic": [
                {
                  "weight": 100,
                  "latestRevision": true
                }
              ],
              "allowInsecure": true,
              "clientCertificateMode": "Ignore",
              "stickySessions": {
                "affinity": "none"
              }
            },
            "identitySettings": [],
            "maxInactiveRevisions": 100
          },
          "template": {
            "containers": [
              {
                "image": "proxylab.azurecr.io/proxylab:v0.0.2-test",
                "imageType": "ContainerImage",
                "name": "[parameters('containerAppName')]",
                "env": [
                  {
                    "name": "HTTPPORT",
                    "value": "80"
                  },
                  {
                    "name": "HTTPSPORT",
                    "value": "443"
                  },
                  {
                    "name": "USER",
                    "value": "[parameters('username')]"
                  },
                  {
                    "name": "PASSWORD",
                    "secretRef": "password"
                  }
                ],
                "resources": {
                  "cpu": "[json('0.5')]",
                  "memory": "1Gi"
                },
                "probes": []
              }
            ],
            "scale": {
              "minReplicas": 1,
              "maxReplicas": 10,
              "cooldownPeriod": 300,
              "pollingInterval": 30
            },
            "volumes": []
          }
        },
        "dependsOn": [
          "[resourceId('Microsoft.App/managedEnvironments', format('env-{0}', parameters('containerAppName')))]"
        ]
      }
    ]
  }