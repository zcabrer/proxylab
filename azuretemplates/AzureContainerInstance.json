{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.34.44.8038",
      "templateHash": "5961692524311753287"
    }
  },
"parameters": {
  "containerName": {
    "type": "string",
    "metadata": {
      "description": "Name of the container instance. Must be unique within the resource group."
    }
  },
  "location": {
    "type": "string",
    "metadata": {
      "description": "Azure region where the container instance will be deployed (e.g., 'eastus', 'westus')."
    }
  },
  "httpPort": {
    "type": "int",
    "defaultValue": 80,
    "metadata": {
      "description": "Port for HTTP traffic. Default is 80."
    }
  },
  "httpsPort": {
    "type": "int",
    "defaultValue": 443,
    "metadata": {
      "description": "Port for HTTPS traffic. Default is 443."
    }
  },
  "username": {
    "type": "string",
    "metadata": {
      "description": "Username for the application admin tools."
    }
  },
  "password": {
    "type": "securestring",
    "metadata": {
      "description": "Secure password for the application admin tools."
    }
  },
  "enableLogging": {
    "type": "bool",
    "metadata": {
      "description": "Enable or disable logging to Log Analytics. Set to true to enable logging."
    }
  },
  "logAnalyticsWorkspaceId": {
    "type": "string",
    "defaultValue": "",
    "metadata": {
      "description": "Log Analytics Workspace ID. Required if enableLogging is true. Locate the workspace ID in the Azure portal under the Log Analytics workspace -> Settings -> Agents management -> Workspace ID."
    }
  },
  "logAnalyticsWorkspaceKey": {
    "type": "securestring",
    "defaultValue": "",
    "metadata": {
      "description": "Log Analytics Workspace Key. Required if enableLogging is true. Locate the workspace key in the Azure portal under the Log Analytics workspace -> Settings -> Agents management -> Primary Key."
    }
  }
},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2024-10-01-preview",
      "name": "[parameters('containerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": "Standard",
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "proxylab.azurecr.io/proxylab:v0.0.1",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": "[parameters('httpPort')]"
                },
                {
                  "protocol": "TCP",
                  "port": "[parameters('httpsPort')]"
                }
              ],
              "environmentVariables": [
                {
                  "name": "USER",
                  "value": "[parameters('username')]"
                },
                {
                  "name": "PASSWORD",
                  "secureValue": "[parameters('password')]"
                },
                {
                  "name": "HTTPPORT",
                  "value": "[format('{0}', parameters('httpPort'))]"
                },
                {
                  "name": "HTTPSPORT",
                  "value": "[format('{0}', parameters('httpsPort'))]"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": "[json('1.5')]",
                  "cpu": "[json('1')]"
                }
              }
            }
          }
        ],
        "initContainers": [],
        "restartPolicy": "OnFailure",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": "[parameters('httpPort')]"
            },
            {
              "protocol": "TCP",
              "port": "[parameters('httpsPort')]"
            }
          ],
          "type": "Public",
          "dnsNameLabel": "[parameters('containerName')]",
          "autoGeneratedDomainNameLabelScope": "TenantReuse"
        },
        "osType": "Linux",
        "diagnostics": "[if(parameters('enableLogging'), createObject('logAnalytics', createObject('workspaceId', parameters('logAnalyticsWorkspaceId'), 'logType', 'ContainerInstanceLogs', 'workspaceKey', parameters('logAnalyticsWorkspaceKey'))), null())]"
      }
    }
  ]
}